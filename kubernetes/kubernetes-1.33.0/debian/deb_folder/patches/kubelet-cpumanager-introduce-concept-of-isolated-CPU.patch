+// get the system-level isolated CPUs
+func getIsolcpus() cpuset.CPUSet {
+	dat, err := os.ReadFile("/sys/devices/system/cpu/isolated")
+	if err != nil {
+		klog.Errorf("[cpumanager] unable to read sysfs isolcpus subdir")
+		return cpuset.New()
+	}
